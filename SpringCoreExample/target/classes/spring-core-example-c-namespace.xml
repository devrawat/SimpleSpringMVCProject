<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:c="http://www.springframework.org/schema/c"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <bean id="calculateInterest" class="co.uk.javavm.spring.core.c.namespace.CalculateInterest"
        c:loan="154000"
        c:durationInMonths="36"
        c:interestInfo-ref="inetrestInfo" />
    <bean id="inetrestInfo"
        class="co.uk.javavm.spring.core.c.namespace.InterestInformation"
        c:interestRate="3.5"
        c:interestType="Simple" />
</beans>
